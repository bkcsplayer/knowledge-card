# Backend Dockerfile - Development Mode
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for asyncpg and pgvector
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (will be overwritten by volume mount in dev)
COPY . .

# Expose port
EXPOSE 8000

# Default command (overridden in docker-compose for dev)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

